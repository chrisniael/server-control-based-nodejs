extends layout

block content
  div(class="container", style="margin-top: 25px;")
    div.row
      div.col-lg-12.col-md-12
        div.panel.panel-warning
          div.panel-heading= title
          div.panel-body
            p ♪───Ｏ（≧∇≦）Ｏ────♪

      div.col-lg-12.col-md-12
        div.panel.panel-danger
          div.panel-heading 区服
          div.panel-body
            div.btn-group
              button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                span(id="server-show") 请选择区服
                span.caret
              ul.dropdown-menu
                each val, index in zones
                  li
                    a(zone=index) #{val.title}

      div.col-lg-12.col-md-12
        div.panel.panel-success
          div.panel-heading 功能
          div.panel-body
            div.row
              for val, index in actions
                div.col-lg-4.col-md-4.col-sm-4(style="margin-top: 5px; margin-bottom: 5px;")
                  button.btn(id=index, class='btn-' + val.style type="button" style="width: 100%" confirm=val.confirm)= val.title

      div.col-lg-12.col-md-12
        div.panel.panel-info
          div.panel-heading 功能
          div.panel-body
            pre#log(style="background-color: white; border: 0px; margin-bottom: 0px;") Just enjoy it!



  // jQuery (necessary for Bootstrap's JavaScript plugins)
  script(src='javascripts/jquery.min.js')
  // Include all compiled plugins (below), or include individual files as needed
  script(src='javascripts/bootstrap.min.js')
  script(src='javascripts/jquery.cookie.min.js')
  script(src='javascripts/main.js')
